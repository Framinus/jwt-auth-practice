{
  "name": "Vinyl",
  "version": "1.0.0",
  "description": "A community for record enthusiasts to review their favorite albums.",
  "engines": {
    "node": "6.12.x"
  },
  "scripts": {
    "db:create": "createdb vinyl",
    "db:drop": "dropdb vinyl",
    "db:schema": "psql -d vinyl < src/data/schema.sql",
    "db:seed": "psql -d vinyl < src/data/albums.sql",
    "start": "nodemon src/index.js --exec babel-node --presets es2015,stage-2",
    "lint": "./node_modules/.bin/eslint src",
    "test": "mocha --require babel-core/register test/**/*.test.js"
  },
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "jwt-simple": "^0.5.1",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "passport-local": "^1.0.0",
    "pg-promise": "^7.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "eslint": "^4.4.1",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1"
  }
}
